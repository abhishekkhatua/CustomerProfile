<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"                xmlns:tools="http://schemas.android.com/tools"                android:layout_width="match_parent"                android:layout_height="match_parent"    >    <RelativeLayout        android:id="@+id/layout_surface"        android:layout_width="match_parent"        android:layout_height="match_parent">        <SurfaceView            android:id="@+id/surfaceview"            android:layout_width="match_parent"            android:layout_height="match_parent" />        <view            android:id="@+id/image"            android:layout_width="match_parent"            android:layout_height="match_parent"            class="in.co.ngcapp.cropimage.CropImageView"            android:background="@android:color/transparent" />    </RelativeLayout>    <Button        android:id="@+id/btn_capture"        android:layout_width="match_parent"        android:layout_height="40dp"        android:text="capture"        android:textColor="#fff"        android:layout_alignParentBottom="true"        android:background="#f816a463"/>    <TextView        android:id="@+id/tv"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/image_flash"        android:layout_centerHorizontal="true"        android:layout_marginTop="20dp"        android:text="Please capture an image in the window"        android:textColor="#fff"        android:textSize="13sp"        android:textStyle="bold" />    <ImageView        android:id="@+id/image_flash"        android:layout_width="40dp"        android:layout_height="40dp"        android:layout_alignParentEnd="true"        android:layout_alignParentRight="true"        android:layout_alignParentTop="true"        android:background="@drawable/ic_flash_on"        android:layout_margin="10dp"        android:contentDescription="@string/app_name"        android:tag="bg1"/></RelativeLayout>