<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:background="#ffffff"    android:layout_margin="10dp"    android:layout_height="wrap_content">    <de.hdodenhof.circleimageview.CircleImageView        android:layout_width="86dp"        android:layout_height="86dp"        android:layout_margin="10dp"        android:id="@+id/customer_images"/>    <TextView        android:id="@+id/name"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="15dp"        android:textSize="18dp"        android:layout_toRightOf="@+id/customer_images"        android:text="Abhishek khatua"/>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:id="@+id/phone_number"        android:text="98765432"        android:layout_toRightOf="@+id/customer_images"        android:layout_marginTop="7dp"        android:textSize="16dp"        android:layout_below="@+id/name"/></RelativeLayout>