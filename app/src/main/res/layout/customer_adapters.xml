<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:background="#ffffff"    android:layout_marginTop="5dp"    android:layout_marginLeft="7dp"    android:layout_marginRight="7dp"    android:layout_height="wrap_content">    <de.hdodenhof.circleimageview.CircleImageView        android:layout_width="66dp"        android:layout_height="66dp"        android:layout_centerVertical="true"        android:id="@+id/customer_images"/>    <TextView        android:id="@+id/name"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:textSize="18dp"        android:layout_marginLeft="6dp"        android:textAppearance="@android:style/TextAppearance.Medium"        android:fontFamily="@font/century_gothic"        android:layout_toRightOf="@+id/customer_images"    />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:id="@+id/phone_number"        android:layout_marginLeft="6dp"        android:fontFamily="@font/century_gothic"        android:textAppearance="@android:style/TextAppearance.Medium"        android:layout_toRightOf="@+id/customer_images"        android:layout_marginTop="7dp"        android:textSize="16dp"        android:layout_below="@+id/name"/>    <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:id="@+id/date_of_birth"            android:fontFamily="@font/century_gothic"            android:textAppearance="@android:style/TextAppearance.Medium"            android:layout_toRightOf="@+id/customer_images"            android:layout_marginTop="7dp"            android:layout_marginLeft="6dp"            android:textSize="16dp"            android:layout_below="@+id/phone_number"/>    <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:id="@+id/address"            android:fontFamily="@font/century_gothic"            android:textAppearance="@android:style/TextAppearance.Medium"            android:layout_toRightOf="@+id/customer_images"            android:layout_marginTop="7dp"            android:textSize="16dp"            android:layout_marginLeft="6dp"            android:layout_below="@+id/date_of_birth"/>    <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:id="@+id/salary"            android:fontFamily="@font/century_gothic"            android:textAppearance="@android:style/TextAppearance.Medium"            android:layout_toRightOf="@+id/customer_images"            android:layout_marginTop="7dp"            android:textSize="16dp"            android:layout_marginLeft="6dp"            android:layout_marginBottom="6dp"            android:layout_below="@+id/address"/>    <View            android:layout_width="match_parent"            android:background="#bab7b7"            android:layout_below="@+id/salary"            android:layout_marginBottom="2dp"            android:layout_height="1dp"/></RelativeLayout>